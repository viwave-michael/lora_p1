<p id="notice"><%= notice %></p>

<h1>Listing Devices</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Serial</th>
      <th>Capability</th>
      <th colspan="3"></th>
      <th>Groups</th>
      <th>Paths</th>
      <th>Roll calls</th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id %></td>
        <td><%= device.serial %></td>
        <td><%= device.capability %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <ul>
            <% device.groups.each do |group| %>
            <li><%= link_to group.name, group_path(group) %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <% if device.paths.any? %>
            <ul>
              <% device.paths.each do |path| %>
              <li><%= link_to 'path', path %></li>
              <% end %>
            </ul>
          <% else %>
            N/A
          <% end %>
        </td>
        <td>
          <% if device.roll_calls.any? %>
            <ul>
              <% device.roll_calls.each do |roll_call| %>
              <li><%= link_to roll_call.when, roll_call %></li>
              <% end %>
            </ul>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

