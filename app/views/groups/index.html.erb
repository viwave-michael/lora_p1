<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
      <th>Devices</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <ul>
            <% group.devices.each do |device| %>
            <li><%= link_to device.serial, device_path(device) %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <%= link_to 'Add', new_group_device_path(group_id: group.id) %>
        </td>
        <td>
          <%= link_to 'Remove', group_devices_remove_path(group_id: group.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>

<%= render 'shared/footer' %>