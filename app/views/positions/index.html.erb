<p id="notice"><%= notice %></p>

<h1>Listing Positions</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Device</th>
      <th>When</th>
      <th>Lng</th>
      <th>Lat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.id %></td>
        <td><%= link_to position.device.serial, position.device %></td>
        <td><%= position.when %></td>
        <td><%= position.lng %></td>
        <td><%= position.lat %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Position', new_device_position_path(device_id: @device.id) %>

<%= render 'shared/footer' %>