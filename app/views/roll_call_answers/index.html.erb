<p id="notice"><%= notice %></p>

<h1>Listing Roll Call Answers</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Roll call</th>
      <th>Device</th>
      <th>When</th>
      <th>Lng</th>
      <th>Lat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roll_call_answers.each do |answer| %>
      <tr>
        <td><%= answer.id %></td>
        <td><%= link_to 'RollCall', answer.roll_call %></td>
        <td><%= link_to answer.device.serial, answer.device %></td>
        <td><%= answer.when %></td>
        <td><%= answer.lng %></td>
        <td><%= answer.lat %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_roll_call_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Roll call answer', new_roll_call_answer_path %>

