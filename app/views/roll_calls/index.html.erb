<p id="notice"><%= notice %></p>

<h1>Listing Roll Calls</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Device</th>
      <th>When</th>
      <th>Lng</th>
      <th>Lat</th>
      <th>Manual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roll_calls.each do |roll_call| %>
      <tr>
        <td><%= roll_call.id %></td>
        <td><%= link_to roll_call.device.serial, roll_call.device %></td>
        <td><%= roll_call.when %></td>
        <td><%= roll_call.lng %></td>
        <td><%= roll_call.lat %></td>
        <td><%= roll_call.manual %></td>
        <td><%= link_to 'Show', roll_call %></td>
        <td><%= link_to 'Edit', edit_roll_call_path(roll_call) %></td>
        <td><%= link_to 'Destroy', roll_call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Roll call', new_roll_call_path %>

<%= render 'shared/footer' %>